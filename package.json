{
  "name": "incalinfinite",
  "version": "1.0.0",
  "description": "BoardGameArena implementation of The Incal Infinite",
  "main": "incalinfinite.js",
  "scripts": {
    "build:ts": "tsc",
    "build:scss": "sass --no-source-map src/yourgamename.scss yourgamename.css",
    "watch:ts": "tsc --watch",
    "watch:scss": "sass --watch src/yourgamename.scss yourgamename.css",
    "watch": "npm run watch:ts && npm run watch:scss",
    "build": "npm run build:ts && npm run build:scss"
  },
  "author": "yourname",
  "license": "MIT",
  "devDependencies": {
    "@prettier/plugin-php": "^0.19.1",
    "@types/node": "^20.3.1",
    "prettier": "^2.7.1",
    "sass": "^1.32.6",
    "typescript": "^4.1.3"
  },
  "prettier": {
    "braceStyle": "1tbs"
  }
}